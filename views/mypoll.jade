extends index2
block content
	div(id="inst")
		h3 Here are all the polls that you created.
	-var j=[];
	-var i=0
	div(id="my_container")
		div(id="poll")
			ul
				each item in items
					li
						h2(id=item._id,class="question")
							a(href='/polls/'+item._id) 
								=item.question
							a(href="/mypolls/rem/"+item._id)
								button(class="btn btn-danger") Remove
							a(href="/mypolls/edit/"+item._id)
								button(class="btn btn-warning") Edit
						canvas(id="myCanvas_"+i,width="400px",height="40px")
						br
						h3 Yes
							button(id="upVal_"+i,class="btn") #{item.up}
						h3 No
							button(id="downVal_"+i,class="btn") #{item.down}
						-j.push(item)
						-i+=1
						hr